<div class="container" style="margin-top:70px;"></div>
<div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de Orden de Laboratorio</h3>

    <div style="padding: 10px;">
        <button class="btn btn-danger">
            <a class="nav-link link-light" aria-current="page" href="/labo_add"> Nueva Orden de Laboratorio</a>
        </button>
    </div>

    {{#if laboratorio}}
    <table class="table text-center">
        <thead>
            <tr class="table-dark">
                <th scope="col">ID</th>
                <th scope="col">Razon social</th>
                <th scope="col">direccion</th>
                <th scope="col">telefono</th>
                <th scope="col">email</th>
                <th scope="col">contacto</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each laboratorio}}
            <tr>
                <td>{{id}}</td>
                <td>{{razon_social}}</td>
                <td>{{direccion}}</td>
                <td>{{telefono}}</td>
                <td>{{email}}</td>
                <td>{{contacto}}</td>
                <td>
                    <div class="">
                        <a href="/labo_edit/{{id}}" class="btn btn-warning p-2">
                            <i class="fa-solid fa-pencil"></i> Actualizar
                        </a>
                        <a href="/labo_delete/{{id}}" class="btn btn-danger p-2">
                            <i class="fa-solid fa-trash"></i> Eliminar
                        </a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr class="table-dark">
                <td colspan="5">REGISTRO DE ORDENES DE Laboratorio</td>
            </tr>
        </tfoot>
    </table>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>No hay órdenes de venta registradas</h3>
        </div>
        <div class="card-body">
            <p>Presiona este botón para registrar una nueva orden de venta en la aplicación</p>
            <a href="/labo_add" class="btn btn-primary">Ir a crear</a>
        </div>
    </div>
    {{/if}}
</div>
