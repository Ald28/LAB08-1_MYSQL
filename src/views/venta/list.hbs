<div class="container" style="margin-top:70px;"></div>
<div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de Orden de Venta</h3>

    <div style="padding: 10px;">
        <button class="btn btn-danger">
            <a class="nav-link link-light" aria-current="page" href="/add"> Nueva Orden de Venta</a>
        </button>
    </div>

    {{#if ventas}}
    <table class="table text-center">
        <thead>
            <tr class="table-dark">
                <th scope="col">ID</th>
                <th scope="col">Fecha Emisión</th>
                <th scope="col">Motivo</th>
                <th scope="col">Situación</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each ventas}}
            <tr>
                <td>{{id}}</td>
                <td>{{fecha_emision}}</td>
                <td>{{motivo}}</td>
                <td>{{situacion}}</td>
                <td>
                    <div class="">
                        <a href="/edit/{{id}}" class="btn btn-warning p-2">
                            <i class="fa-solid fa-pencil"></i> Actualizar
                        </a>
                        <a href="/delete/{{id}}" class="btn btn-danger p-2">
                            <i class="fa-solid fa-trash"></i> Eliminar
                        </a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr class="table-dark">
                <td colspan="5">REGISTRO DE ORDENES DE VENTA</td>
            </tr>
        </tfoot>
    </table>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>No hay órdenes de venta registradas</h3>
        </div>
        <div class="card-body">
            <p>Presiona este botón para registrar una nueva orden de venta en la aplicación</p>
            <a href="/add" class="btn btn-primary">Ir a crear</a>
        </div>
    </div>
    {{/if}}
</div>
